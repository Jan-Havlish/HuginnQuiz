import React, { useState, useEffect, useRef } from "react";
import { call } from "./ai";
import { SaveJsonButton, LoadJsonButton } from "./JsonHandling";

const App = () => {
  // State variables
  const [screen, setScreen] = useState("start"); // 'start', 'question', 'results'
  const [quiz, setQuiz] = useState(null);
  const [currentQuestionIndex, setCurrentQuestionIndex] = useState(0);
  const [score, setScore] = useState(0);
  const [results, setResults] = useState([]);
  const [jsonInput, setJsonInput] = useState(sampleQuizJson);
  const [timeLeft, setTimeLeft] = useState(0);
  const timerRef = useRef(null);
  const timerBarRef = useRef(null);

  // New state variables for the API key, topic, and number of questions
  const [apiKey, setApiKey] = useState("");
  const [topic, setTopic] = useState("");
  const [numberOfQuestions, setNumberOfQuestions] = useState(5);

  // Clear timers when component unmounts
  useEffect(() => {
    return () => {
      clearTimeout(timerRef.current);
    };
  }, []);

  const startQuiz = () => {
    try {
      // Parse the quiz JSON
      const parsedQuiz = JSON.parse(jsonInput);

      // Validate quiz data
      if (
        !parsedQuiz.questions ||
        !Array.isArray(parsedQuiz.questions) ||
        parsedQuiz.questions.length === 0
      ) {
        throw new Error("Invalid quiz format: questions array is required");
      }

      // Setup the quiz
      setQuiz(parsedQuiz);
      setCurrentQuestionIndex(0);
      setScore(0);
      setResults([]);
      setScreen("question");
    } catch (error) {
      alert(
        `Error: ${error.message}. Please check your JSON format and try again.`,
      );
    }
  };

  const startTimer = (seconds) => {
    // Clear any existing timers
    clearTimeout(timerRef.current);
    setTimeLeft(seconds);

    // Reset timer bar
    if (timerBarRef.current) {
      timerBarRef.current.style.transition = "none";
      timerBarRef.current.style.width = "100%";

      // Force a reflow
      void timerBarRef.current.offsetWidth;

      // Start the transition
      timerBarRef.current.style.transition = `width ${seconds}s linear`;
      timerBarRef.current.style.width = "0%";
    }

    // Set timeout for when time expires
    timerRef.current = setTimeout(() => {
      // Time's up - record as incorrect and move to next question
      recordResult(false, null);
      nextQuestion();
    }, seconds * 1000);
  };

  const selectAnswer = (answerIndex) => {
    // Stop the timer
    clearTimeout(timerRef.current);

    const question = quiz.questions[currentQuestionIndex];

    // Check if answer is correct
    const isCorrect = answerIndex === question.correctIndex;

    // Record the result
    recordResult(isCorrect, answerIndex);

    // Update score if correct
    if (isCorrect) {
      setScore((prevScore) => prevScore + 1000); // Base points
    }

    // Move to next question after a short delay
    setTimeout(nextQuestion, 1500);
  };

  const recordResult = (isCorrect, selectedAnswerIndex) => {
    const question = quiz.questions[currentQuestionIndex];

    setResults((prevResults) => [
      ...prevResults,
      {
        question: question.question,
        isCorrect: isCorrect,
        selectedAnswer:
          selectedAnswerIndex !== null
            ? question.answers[selectedAnswerIndex]
            : null,
        correctAnswer: question.answers[question.correctIndex],
      },
    ]);
  };

  const nextQuestion = () => {
    // Check if there are more questions
    if (currentQuestionIndex < quiz.questions.length - 1) {
      setCurrentQuestionIndex((prevIndex) => prevIndex + 1);
    } else {
      // Quiz completed
      setScreen("results");
    }
  };

  const resetQuiz = () => {
    // Reset quiz state
    setQuiz(null);
    setCurrentQuestionIndex(0);
    setScore(0);
    setResults([]);
    setScreen("start");

    // Clear timers
    clearTimeout(timerRef.current);
  };

  // Start the timer when the current question changes
  useEffect(() => {
    if (screen === "question" && quiz) {
      const question = quiz.questions[currentQuestionIndex];
      startTimer(question.timeLimit || 20);
    }
  }, [currentQuestionIndex, screen, quiz]);

  // New function to generate a quiz using AI
  const generateQuiz = async () => {
    if (!apiKey || !topic || !numberOfQuestions) {
      alert(
        "Please fill in your API key, quiz topic, and number of questions.",
      );
      return;
    }

    const prompt = `Hi, Create a Kahoot-style quiz in JSON format with the following structure:

{
  "title": "Your Quiz Title",
  "questions": [
    {
      "question": "Question text goes here?",
      "answers": ["Answer 1", "Answer 2", "Answer 3", "Answer 4"],
      "correctIndex": 0,
      "timeLimit": 20
    }
    // More questions...
  ]
}

Requirements:
Generate ${numberOfQuestions} multiple-choice questions about ${topic}
Each question must have exactly 4 answer options
The correctIndex should be the 0-based index of the correct answer (0-3)
timeLimit specifies how many seconds users have to answer (10-30 seconds)
Make questions engaging and varied in difficulty
Include a mix of text-based questions
Ensure there is only one correct answer per question
Give the quiz an appropriate title

Please format your output as valid JSON that can be directly used inside a quiz application.`;

    try {
      const response = await call(apiKey, prompt);
      console.log(response, "call in app");
      setJsonInput(JSON.stringify(response));
    } catch (error) {
      console.error("Error generating quiz:", error);
      alert("Error generating quiz. Check console for details.");
    }
  };

  return (
    <div className="min-h-screen flex flex-col bg-gray-100 text-gray-800">
      {/* Header */}
      <header className="bg-purple-800 text-white p-4 shadow-md text-center">
        <h1 className="text-3xl font-bold">Quiz Time!</h1>
      </header>

      {/* Main content */}
      <main className="flex-1 flex flex-col lg:flex-row p-8 max-w-6xl mx-auto w-full gap-8">
        {/* Sidebar (Instructions & Inputs) */}
        {screen === "start" && (
          <aside className="w-full lg:w-1/3 bg-white p-6 rounded-md shadow-md h-fit">
            <h3 className="font-bold text-xl mb-4">Instructions:</h3>
            <p className="mb-2">
              Paste your quiz JSON below or generate one using the AI.
            </p>
            <pre className="bg-gray-100 p-3 rounded-md text-sm overflow-x-auto mb-4">
              {`{
      "title": "Quiz Title",
      "questions": [
        {
          "question": "What is 2+2?",
          "answers": ["3", "4", "5", "6"],
          "correctIndex": 1,
          "timeLimit": 20
        }
      ]
    }`}
            </pre>
            <div className="flex flex-col gap-3">
              <input
                type="password"
                className="p-2 border border-gray-300 rounded-md"
                placeholder="Enter your API key"
                value={apiKey}
                onChange={(e) => setApiKey(e.target.value)}
              />
              <input
                type="text"
                className="p-2 border border-gray-300 rounded-md"
                placeholder="Enter quiz topic"
                value={topic}
                onChange={(e) => setTopic(e.target.value)}
              />
              <input
                type="number"
                className="p-2 border border-gray-300 rounded-md"
                placeholder="Number of questions"
                value={numberOfQuestions}
                onChange={(e) => setNumberOfQuestions(e.target.value)}
              />
              <button
                className="p-3 bg-green-600 hover:bg-green-800 text-white font-bold rounded-md transition-colors"
                onClick={generateQuiz}
              >
                Generate Quiz
              </button>
              <div className="flex m-2 justify-center gap-2">
                <SaveJsonButton
                  data={JSON.parse(jsonInput)}
                  filename={JSON.parse(jsonInput).title + ".json"}
                />
                <LoadJsonButton
                  onLoad={(data) => setJsonInput(JSON.stringify(data))}
                />
              </div>
            </div>
          </aside>
        )}

        {/* Quiz Area */}
        <section className="flex-1 bg-white p-6 rounded-md shadow-md border-2 border-red-500 h-3/4">
          {screen === "start" && (
            <div className="flex flex-col gap-4">
              <textarea
                className="min-h-96 p-3 font-mono border border-gray-300 rounded-md resize-y"
                value={jsonInput}
                onChange={(e) => setJsonInput(e.target.value)}
                placeholder="Paste your quiz JSON here..."
              />
              <button
                className="p-3 bg-purple-600 hover:bg-purple-800 text-white font-bold rounded-md transition-colors"
                onClick={startQuiz}
              >
                Start Quiz
              </button>
            </div>
          )}

          {screen === "question" && quiz && (
            <div className="flex flex-col gap-6 animate-fadeIn">
              <div className="flex justify-between text-lg font-semibold">
                <span>
                  Question {currentQuestionIndex + 1} / {quiz.questions.length}
                </span>
                <span>Score: {score}</span>
              </div>
              <div className="w-full bg-gray-200 h-2 rounded-full overflow-hidden">
                <div ref={timerBarRef} className="h-full bg-red-500 w-full" />
              </div>
              <div className="text-2xl font-bold text-center my-5">
                {quiz.questions[currentQuestionIndex].question}
              </div>
              <div className="grid grid-cols-2 gap-6">
                {quiz.questions[currentQuestionIndex].answers.map(
                  (answer, i) => (
                    <div
                      key={i}
                      className={`p-5 text-center text-lg font-bold text-white rounded-lg cursor-pointer hover:scale-105 transition-transform ${["bg-red-600", "bg-blue-600", "bg-yellow-600", "bg-green-600"][i]}`}
                      onClick={() => selectAnswer(i)}
                    >
                      {answer}
                    </div>
                  ),
                )}
              </div>
            </div>
          )}

          {screen === "results" && (
            <div className="flex flex-col gap-6 animate-fadeIn text-center">
              <h2 className="text-2xl font-bold">Quiz Completed!</h2>
              <div className="text-5xl font-bold text-purple-800">{score}</div>
              <h3 className="font-bold text-lg mt-4">Question Summary</h3>
              <ul className="space-y-3">
                {results.map((result, index) => (
                  <li
                    key={index}
                    className={`p-4 rounded-md text-left ${result.isCorrect ? "bg-green-100 border-l-4 border-green-500" : "bg-red-100 border-l-4 border-red-500"}`}
                  >
                    <strong>Q{index + 1}:</strong> {result.question}
                    <div className="font-bold mt-1">
                      {result.isCorrect ? (
                        <span>✅ Correct: {result.correctAnswer}</span>
                      ) : (
                        <span>
                          ❌ You answered:{" "}
                          {result.selectedAnswer || "Time's up!"} <br /> Correct
                          answer: {result.correctAnswer}
                        </span>
                      )}
                    </div>
                  </li>
                ))}
              </ul>
              <button
                className="p-3 bg-purple-600 hover:bg-purple-800 text-white font-bold rounded-md transition-colors mt-4"
                onClick={resetQuiz}
              >
                Play Again
              </button>
            </div>
          )}
        </section>
      </main>
    </div>
  );
};

// Sample quiz JSON
const sampleQuizJson = `{
  "title": "Ultimate Mixed Knowledge Quiz",
  "questions": [
    {
      "question": "Which planet in our solar system has the most moons?",
      "answers": ["Jupiter", "Saturn", "Uranus", "Neptune"],
      "correctIndex": 1,
      "timeLimit": 20
    },
    {
      "question": "What is the capital city of Australia?",
      "answers": ["Sydney", "Melbourne", "Canberra", "Perth"],
      "correctIndex": 2,
      "timeLimit": 15
    },
    {
      "question": "In what year was the first iPhone released?",
      "answers": ["2005", "2006", "2007", "2008"],
      "correctIndex": 2,
      "timeLimit": 15
    },
    {
      "question": "Which element has the chemical symbol 'Au'?",
      "answers": ["Silver", "Gold", "Aluminum", "Argon"],
      "correctIndex": 1,
      "timeLimit": 10
    },
    {
      "question": "What is the largest species of shark?",
      "answers": ["Great White Shark", "Whale Shark", "Tiger Shark", "Hammerhead Shark"],
      "correctIndex": 1,
      "timeLimit": 15
    }
  ]
}`;

export default App;
